<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.aoindustries</groupId>
		<artifactId>ao-oss-parent</artifactId>
		<version>1.0.1</version>
		<relativePath>../../ao-oss-parent/pom.xml</relativePath>
	</parent>

	<groupId>com.aoindustries</groupId>
	<artifactId>ao-messaging-tcp-server</artifactId>
	<version>1.0.2</version>
	<packaging>jar</packaging>

	<properties>
		<javadoc.breadcrumbs><![CDATA[<a target="_top" href="https://aoindustries.com/ao-messaging/">AO Messaging</a>
/ <a target="_top" href="https://aoindustries.com/ao-messaging/tcp/">TCP</a>
/ <a target="_top" href="${project.url}">${shortTitle}</a>]]></javadoc.breadcrumbs>
		<shortTitle>Server</shortTitle>
	</properties>

	<name>AO Messaging TCP Server</name>
	<url>https://aoindustries.com/ao-messaging/tcp/server/</url>
	<description>Server for asynchronous bidirectional messaging over TCP sockets.</description>
	<inceptionYear>2014</inceptionYear>

	<scm>
		<!-- Can't inherit due to multi-module -->
		<connection>scm:git:git://github.com/aoindustries/${project.artifactId}.git</connection>
		<developerConnection>scm:git:git@github.com:aoindustries/${project.artifactId}.git</developerConnection>
		<url>https://github.com/aoindustries/${project.artifactId}</url>
		<tag>ao-messaging-tcp-server-1.0.2</tag>
	</scm>

	<profiles>
		<profile>
			<id>release</id>
			<build>
				<pluginManagement>
					<plugins>
						<plugin>
							<groupId>org.apache.maven.plugins</groupId>
							<artifactId>maven-javadoc-plugin</artifactId>
							<configuration>
								<links>
									<link>https://aoindustries.com/ao-concurrent/apidocs/</link>
									<link>https://aoindustries.com/ao-messaging/base/apidocs/</link>
									<link>https://aoindustries.com/ao-messaging/tcp/apidocs/</link>
									<link>https://aoindustries.com/aocode-public/apidocs/</link>
								</links>
							</configuration>
						</plugin>
					</plugins>
				</pluginManagement>
			</build>
		</profile>
	</profiles>

	<dependencies>
		<dependency>
			<groupId>com.aoindustries</groupId>
			<artifactId>ao-concurrent</artifactId>
			<version>1.0.2</version>
		</dependency>
		<dependency>
			<groupId>com.aoindustries</groupId>
			<artifactId>ao-messaging-base</artifactId>
			<version>1.0.2</version>
		</dependency>
		<dependency>
			<groupId>com.aoindustries</groupId>
			<artifactId>ao-messaging-tcp</artifactId>
			<version>1.0.2</version>
		</dependency>
		<dependency>
			<groupId>com.aoindustries</groupId>
			<artifactId>aocode-public</artifactId>
			<version>1.8.3</version>
		</dependency>
	</dependencies>
</project>
